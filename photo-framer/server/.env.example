# Photo-Framer Production Environment Configuration
# Copy this to .env and fill in your values

# Server
NODE_ENV=production
PORT=3001

# Database (from cPanel MySQL)
DB_HOST=localhost
DB_USER=your_cpanel_user_photoframer
DB_PASS=your_secure_database_password
DB_NAME=your_cpanel_user_photo_framer

# Security - REQUIRED in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
IMAGE_TOKEN_SECRET=generate_a_64_byte_hex_string_here

# CORS - Your domain
ALLOWED_ORIGINS=https://tomasquinones.com

# Optional: Enable database query logging
DB_LOGGING=false
